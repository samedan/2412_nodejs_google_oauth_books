<h1>Stories</h1>
<div class="row">
  {{!-- ouside the #each loop the user is LoggedIn User, 
  inside the loop the user is the author of the story (access as ../user) --}}
  {{#each stories}}
    <div class="col s12 m4">
      <div class="card">
        <div class="card-image">
         {{!-- editIcon(storyUser, loggedUser, storyId, floating = true) --}}
          {{{editIcon user ../authedInUser _id}}}
        </div>
        <div class="card-content center-align">
          <h5>{{title}}</h5>
          <p>{{stripTags (truncate body 150)}}</p>
          <br />
          <div class="chip">
            <img src="{{user.image}}" alt="" />
            <a href="/stories/user/{{user._id}}">{{user.displayName}}</a>
          </div>
        </div>
        <div class="card-action center-align">
          <a href="/stories/{{_id}}" class="btn grey">Read more</a>
        </div>
      </div>
    </div>
  {{else}}
    <p>No stories to show.</p>
  {{/each}}
</div>
