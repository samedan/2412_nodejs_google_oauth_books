<h6>Dashboard</h6>
<h3>Welcome {{name}} <i>name</i></h3>
<h3><i>displayName</i> {{displayName}}</h3>

<p>Your Stories</p>
{{#if stories}}
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Date</th>
        <th>Status</th>
        <th>x</th>
      </tr>
    </thead>
    <tbody>
      {{#each stories}}
        <tr>
          <td><a href="/stories/{{_id}}">{{title}}</a></td>
          <td>{{createdAt}}</td>
          <td><span class="dash-status">{{status}}</span></td>
          <td>x</td>
        </tr>
      {{/each}}
    </tbody>
  </table>

{{else}}
  <p>You have not created any stories.</p>
{{/if}}
